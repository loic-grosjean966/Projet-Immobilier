{# Utilisation du squelette de page base.html.twig #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Se connecter{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <h1 class="col-12 text-center my-5">Se connecter</h1>
        </div>





        {# Formulaire de connexion #}
     <div class="row">
        <div class="col-12 col-md-4 offset-md-4">

            <form method="POST">

                {# Si le formulaire de connexion poss√®de une erreur, on l'affiche #}
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {# Champ email #}
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>

                {# Champ mot de passe #}
                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                {# Champ invisible token anti attaque CSRF #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# Bouton de validation #}
                <input type="submit" class="btn btn-outline-primary col-12" value="Se connecter">
            </form>

        </div>
    </div>

    </div>

     
    
{% endblock %}
